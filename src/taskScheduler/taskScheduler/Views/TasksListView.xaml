<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:xc="clr-namespace:XCalendar;assembly=XCalendar"
             x:Class="taskScheduler.Views.TasksListView"
             Title="Задачи">

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="CurDate"
                     x:FieldModifier="public"/>
        <ToolbarItem IconImageSource="plus_math.png"
                     Clicked="AddButtonClick_Clicked"/>
    </ContentPage.ToolbarItems>
   
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackLayout>
            <ListView IsPullToRefreshEnabled="True"
                      x:FieldModifier="public"
                      CachingStrategy="RecycleElement"
                      IsRefreshing="{Binding IsBusy, Mode=OneWay}"
                      RefreshCommand="{Binding RefreshCommand}"
                      ItemsSource="{Binding TasksList}"
                      RefreshControlColor="Red"
                      SeparatorVisibility="None"
                      HasUnevenRows="True"
                      x:Name="listView"
                      SelectionMode="Single"
                      ItemTapped="OnSelectionChanged"
                      Grid.Row="0">
                <ListView.ItemTemplate>
                <DataTemplate x:Name="dataTemplateListView">
                    <ViewCell>
                        <ViewCell.ContextActions>
                            <MenuItem Clicked="DeleteTask_Clicked"
                                      IconImageSource="delete.png"/>
                        </ViewCell.ContextActions>
                            <Grid>
                                <StackLayout>
                                    <Grid Margin="0,5,5,0"
                                          ColumnDefinitions="0.8*,0.2*"
                                          RowDefinitions="25,20">

                                        <Label Text="{Binding Name}"
                                               FontSize="Medium"
                                               Padding="5,0,0,0"
                                               TextColor="Black"
                                               Grid.Row="0"
                                               Grid.Column="0"/>

                                        <Label Text="{Binding Description}"
                                               TextColor="Gray"
                                               Padding="10,0,0,0"
                                               FontSize="Small"
                                               Grid.Row="1"
                                               Grid.Column="0"/>

                                        <Label Text="{Binding TaskCreatedDate}"
                                               TextColor="Silver"
                                               Padding="0,0,0,5"
                                               FontSize="Small"
                                               Grid.Row="0"
                                               Grid.Column="1"/>
                                    </Grid>
                                </StackLayout>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
        <StackLayout VerticalOptions="End">
            <Grid ColumnDefinitions="0.5*,0.5*,0.5*">
                <Button x:Name="ButCalendar"
                        Grid.Column="0"
                        WidthRequest="75"
                        HeightRequest="50"
                        HorizontalOptions="Start"
                        Clicked="Button_Clicked_Calendar"
                        Text="Calendar"
                        FontAttributes="Bold"
                        FontSize="10"
                        CornerRadius="65"/>
                <Button x:Name="ButToday"
                        Grid.Column="1"
                        WidthRequest="75"
                        HeightRequest="75"
                        FontAttributes="Bold"
                        FontSize="10"
                        HorizontalOptions="Center"
                        Clicked="Button_Clicked_ToDay"
                        CornerRadius="65"/>
                <Button x:Name="ButTomorrow"
                        WidthRequest="75"
                        HeightRequest="50"
                        Grid.Column="2"
                        FontAttributes="Bold"
                        FontSize="9"
                        HorizontalOptions="End" 
                        Clicked="Button_Clicked_Tomorrow"
                        CornerRadius="65"/>
            </Grid>
        </StackLayout>
    </Grid>
</ContentPage>